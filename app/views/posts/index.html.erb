<h1>Listing posts</h1>

<table cellpadding="10px" border="1">
  <tr>
    <th>Post</th>
    <th>Comment</th>
  <!--   <th></th> -->
    <th>Operations</th>
   <!--  <th></th> -->
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td>
      <%#= post.post %>
      <%= best_in_place post, :post %>
    </td>
    <td>
      <%#= post.comment %>
       <%= best_in_place post, :comment %>
    </td>
    <td>
      <%#= post.comment %>
       <%= best_in_place post, :status  ,:type => :select, :collection => [["Active", "Active"], ["InActive", "InActive"]] %>
    </td>
    <td><%= link_to 'Show', post %></td> 
    <!-- <td><%#= button_to 'Edit', edit_post_path(post) %></td> -->
  <!--   <td><%#= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
  </tr>
<% end %>
</table>

